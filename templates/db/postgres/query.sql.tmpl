-- name: Create{{ $modelName | singularize | title }} :one
INSERT INTO {{ $modelName }} (
    {{- range $propertyName, $property := .Properties }}
    {{ $propertyName }},
    {{- end }}
    created_by,
    updated_by,
    deleted_by,
    created_at,
    updated_at,
    deleted_at
) VALUES (
    {{- range loop 1 (len .Properties | add 3) }}
    ${{ . }},
    {{- end }}
    NOW(),
    NOW(),
    NOW()
)
RETURNING *;

-- name: Update{{ $modelName | singularize | title }} :one
UPDATE {{ $modelName }}
SET 
    {{- with $i := 2 }}
        {{- range $propertyName, $property := $model.Properties }}
    {{ $propertyName }} = ${{ $i }},
            {{- $i = add $i 1}}
        {{- end }}
    updated_by = ${{ $i }},
    {{- end }}
    updated_at = NOW()
WHERE id = $1
RETURNING *;

